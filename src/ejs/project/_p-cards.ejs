<div class="p-cards">
  <%# 通常のカードの場合 %>
  <% if( articleCards == 'topCards') { %>
  <% for (let i = 0; i < max; i++) { %>
  <article class="p-cards__item">
    <%- include('../component/_c-card',{num:i,articleCard:'topCard'}) %>
  </article>
  <% } %>
  <%# 関連記事の場合 %>
  <% } else if( articleCards == 'recommendCards') { %>
    <% for (let i = 0; i < max; i++) { %>
    <article class="p-cards__item p-cards__item--recommend">
      <%- include('../component/_c-card',{num:i,articleCard:'recommendCard'}) %>
    </article>
    <% } %>
  <% } %>
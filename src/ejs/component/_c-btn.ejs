<%# 例）include('../component/_c-btn',{link:'./blog.html', text:'詳しく見る',backColor:'black'}) %>

<%# blackの場合は背景が黒、文字色が白 %>
<% if( backColor == 'black' ) { %>
<a href="<%= link %>" class="c-btn"><%= text %></a>
<%# whiteの場合は背景が白、文字色が黒 %>
<% } else if(backColor == 'white') { %>
<a href="<%= link %>" class="c-btn c-btn--white"><%= text %></a>
<% } %>
